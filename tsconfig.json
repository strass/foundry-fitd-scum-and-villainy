{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["DOM", "ES6", "ES2017", "ES2019"],
    "types": ["foundry-pc-types"],
    "typeRoots": ["./src/snabbdom"],
    "jsx": "react",
    "jsxFactory": "jsx",
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "../"
  },
  "include": ["src/**/*"]
}
